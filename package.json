{
	"private": true,
	"name": "claudeflare-",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev:server": "bun run --hot apps/server/src/server.ts",
		"dev:cli": "bun run apps/cli/src/cli.ts",
		"start": "bun run apps/server/src/server.ts",
		"cli": "bun run apps/cli/src/cli.ts",
		"typecheck": "bunx tsc --noEmit",
		"build": "bun run workspaces run build",
		"format": "bunx biome format --write .",
		"lint": "bunx --bun biome lint --write ."
	},
	"engines": {
		"bun": ">=1.2.8"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"bun-types": "latest",
		"@types/bun": "latest",
		"typescript": "^5.0.0"
	}
}
